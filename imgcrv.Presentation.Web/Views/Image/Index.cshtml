@model IEnumerable<imgcrv.Presentation.Web.Models.Image>

@{
    ViewBag.Title = "Mano paveikslėliai";
}

@if (Model.Count() == 0)
{
    @Html.Label("Neturite įkeltų paveikslėlių", new { @class = "control-label" })
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.Label("Paveikslėlis")
            </th>
            <th>
                @Html.Label("Įkėlimo data")
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in @Model) {
        <tr>
            <td>
                <img style="max-height: 300px; width: auto; max-width: 300px" src="@Url.Content(item.carvedPath)" alt="Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadedAt)
            </td>
            <td></td>
            <td>
                <input type="button" title="Atsisiųsti paveikslėlį" value="Atsisiųsti" class="btn btn-default"
                       onclick="location.href='@Url.Action("Download", "Image", new { id = item.Id})'" />
                <input type="button" title="Redaguoti paveikslėlį" value="Redaguoti" class="btn btn-default"
                       onclick="location.href='@Url.Action("Display", "Home", new { id = item.Id })' " />
                <input type="button" title="Ištrinti paveikslėlį" value="Ištrinti" class="btn btn-default"
                       onclick="location.href='@Url.Action("Delete", "Image", new { id = item.Id })'" />
            </td>
        </tr>
        }
        
    </table>
}
